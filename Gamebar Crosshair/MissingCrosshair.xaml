<Page
    x:Class="Gamebar_Crosshair.MissingCrosshair"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Gamebar_Crosshair"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="LocationDisabledMessage" FontStyle="Normal"
                 Visibility="Visible" Margin="15,15,0,0" TextWrapping="Wrap" FontSize="20"  Grid.Row="0" Grid.Column="0">
          <Run Text="This app requires you to have selected a crosshair from the Crosshair Magic app. Click below to go to the app. " />
        </TextBlock>
        <Button x:Name="OpenSteamAppButton" Margin="15 0 0 0" Click="OpenSteamAppButton_Click" Visibility="Visible" Grid.Row="0" Grid.Column="0">Get the app</Button>
    </Grid>
</Page>
